<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createpost">
    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Nhập tiêu đề bài viết"
                android:id="@+id/tv_tieude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <EditText
                android:id="@+id/et_tieude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tieude"
                android:ems="10"
                android:hint="Nhập tiêu đề ở đây"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp" />
            <TextView
                android:text="Nhập nội dung bài viết"
                android:layout_below="@+id/et_tieude"
                android:padding="10dp"
                android:id="@+id/tv_noidung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <EditText
                android:id="@+id/et_nd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_noidung"
                android:ems="10"
                android:hint="Nhập nội dung ở đây"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_nd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_nd1"
                android:ems="10"
                android:hint="Nhập nội dung ở đây"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_nd3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_nd2"
                android:ems="10"
                android:hint="Nhập nội dung ở đây"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_nd4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_nd3"
                android:ems="10"
                android:hint="Nhập nội dung ở đây"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_nd5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_nd4"
                android:ems="10"
                android:hint="Nhập nội dung ở đây"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_nd6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_nd5"
                android:ems="10"
                android:hint="Nhập nội dung ở đây"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_nd7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_nd6"
                android:ems="10"
                android:hint="Nhập nội dung ở đây"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_nd8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_nd7"
                android:ems="10"
                android:hint="Nhập nội dung ở đây"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_nd9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_nd8"
                android:ems="10"
                android:hint="Nhập nội dung ở đây"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_nd10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_nd9"
                android:ems="10"
                android:hint="Nhập nội dung ở đây"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/bt_addcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_nd10"
                android:layout_alignRight="@id/et_nd10"
                android:padding="15dp"
                android:text="+"
                android:textSize="20sp"></Button>
            <LinearLayout
                android:weightSum="10"
                android:layout_below="@+id/bt_addcontent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tải lên ảnh"
                    android:layout_weight="4"
                    >
                </Button>
                <TextView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <Button
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Tải lên  video">
                </Button>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>