<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyDSDetail">
    <TextView
        android:layout_width="match_parent"
        android:text="Chi tiết danh sách"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:text="Người tạo"
        android:id="@+id/tv_nguoitao"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:text="Ngày tạo"
        android:id="@+id/tv_ngaytao"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/tv_bv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên bài viết 1"
            android:textSize="20dp"
            android:visibility="invisible"></TextView>

        <TextView
            android:id="@+id/tv_bv2"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên bài viết 2"
            android:textSize="20dp"
            android:visibility="invisible"></TextView>

        <TextView
            android:id="@+id/tv_bv3"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên bài viết 3"
            android:textSize="20dp"
            android:visibility="invisible"></TextView>

        <TextView
            android:id="@+id/tv_bv4"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên bài viết 4"
            android:textSize="20dp"
            android:visibility="invisible"></TextView>
    </LinearLayout>

</LinearLayout>